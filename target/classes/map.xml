<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.adonev.jdbcEntityFramework">
    <class name="User" table="user" schema="bank">
        <id name="id">
            <column name="id" sql-type="int(10) unsigned AUTO_INCREMENT"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(30)" length="30"/>
        </property>

    </class>

    <class name="Account" table="account" schema="bank">
        <id name="id">
            <column name="accountId" sql-type="int(11) AUTO_INCREMENT"/>
        </id>
        <property name="balance">
            <column name="balance" sql-type="float(24)" />
        </property>
        <many-to-one name="userByUserId" class="Account">
            <column name="userId"/>
        </many-to-one>
    </class>

    <class name="Transfer" table="transfer" schema="bank">
        <id name="id">
            <column name="transferId" sql-type="int(22) AUTO_INCREMENT"/>
        </id>
        <property name="transferTimestamp">
            <column name="transferTimestamp" sql-type="TIMESTAMP" />
        </property>
        <many-to-one name="userByUserId" class="Account">
            <column name="userId"/>
        </many-to-one>
    </class>

</hibernate-mapping>