<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.adonev.jdbcEntityFramework">
    <class name="User" table="user" schema="bank">
        <id name="id">
            <column name="id" sql-type="int(10) unsigned AUTO_INCREMENT"/>
        </id>
    </class>

    <class name="Account" table="account" schema="bank">
        <id name="id">
            <column name="accountId" sql-type="int(11) AUTO_INCREMENT"/>
        </id>
    </class>

    <class name="Transfer" table="transfer" schema="bank">
        <id name="id">
            <column name="transferId" sql-type="int(22) AUTO_INCREMENT"/>
        </id>
    </class>

</hibernate-mapping>